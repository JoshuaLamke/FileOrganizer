import java.nio.file.Path;
public class NewDirectoryChooser{
  public static Path wordDocDirectory;
  public static Path pdfDirectory;
  public static Path textFileDirectory;
  public static Path powerpointDirectory;
  public static Path imageDirectory;
  public static Path excelDirectory;
  public static Path otherDirectory;
  public String fileType;
  
  public NewDirectoryChooser(String fileType){
    this.fileType == fileType;
  }
  
  public Path choose(){
    if ((fileType.equals("xls")) || (fileType.equals("ods")) || (fileType.equals("xlr")) || (fileType.equals("xlsx"))){
      return exceldirectory;
    }
    if else ((fileType.equals("key")) || (fileType.equals("odp")) || (fileType.equals("pps")) || (fileType.equals("ppt")) || (fileType.equals("pptx"))){
      return powerpointDirectory;
    }
    if else ((fileType.equals("ai")) || (fileType.equals("bmp")) || (fileType.equals("gif")) || (fileType.equals("ico")) || (fileType.equals("jpg")) || (fileType.equals("jpeg")) || (fileType.equals("png")) || (fileType.equals("ps")) || (fileType.equals("psd")) || (fileType.equals("svg")) || (fileType.equals("tif")) || (fileType.equals("tiff"))){
      return powerpointDirectory;
    }
    if else ((fileType.equals("doc")) || (fileType.equals("docx")) || (fileType.equals("odt")) || (fileType.equals("wks")) || (fileType.equals("wps")) || (fileType.equals("wpd"))){
      return wordDocDirectory;
    }
    if else ((fileType.equals("txt")) || (fileType.equals("rtf")) || (fileType.equals("odt"))){
      return textFileDirectory;
    }
    if else (fileType.equals("pdf")){
      return pdfDirectory;
    }
    else{
      return otherDirectory;
    }
  }
